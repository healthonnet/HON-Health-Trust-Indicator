{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/utils/md5.js",
      "scripts/utils/hash.js",
      "scripts/utils/listHON.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "storage",
    "webRequest"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "48": "images/icon-48.png"
    },
    "default_title": "Kconnect",
    "default_popup": "popup.html"
  },
  "omnibox": {
    "keyword": "kconnect"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.google.ch/*",
        "*://*.google.fr/*",
        "*://*.google.co.uk/*",
        "*://*.google.it/*",
        "*://*.google.bg/*",
        "*://*.google.cz/*",
        "*://*.google.dk/*",
        "*://*.google.gr/*",
        "*://*.google.ee/*",
        "*://*.google.es/*",
        "*://*.google.hr/*",
        "*://*.google.lv/*",
        "*://*.google.lt/*",
        "*://*.google.hu/*",
        "*://*.google.com.mt/*",
        "*://*.google.nl/*",
        "*://*.google.pl/*",
        "*://*.google.pt/*",
        "*://*.google.ro/*",
        "*://*.google.si/*",
        "*://*.google.sk/*",
        "*://*.google.se/*",
        "*://*.bing.com/*",
        "*://*.bing.com/*",
        "*://*.search.yahoo.com/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/jquery-circle-progress/dist/circle-progress.js",
        "scripts/utils/tld.js",
        "scripts/kconnect.js",
        "scripts/contentscript.js"
      ],
      "css":[
        "bower_components/font-awesome/css/font-awesome.css",
        "styles/main.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "styles/main.css",
    "bower_components/font-awesome/css/font-awesome.css",
    "images/**"
  ]
}
