{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "webRequest"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "48": "images/icon-48.png"
    },
    "default_title": "Kconnect",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "https://*.google.ch/*",
        "https://*.google.fr/*",
        "https://*.google.co.uk/*",
        "https://*.google.it/*",
        "https://*.google.bg/*",
        "https://*.google.cz/*",
        "https://*.google.dk/*",
        "https://*.google.gr/*",
        "https://*.google.ee/*",
        "https://*.google.es/*",
        "https://*.google.hr/*",
        "https://*.google.lv/*",
        "https://*.google.lt/*",
        "https://*.google.hu/*",
        "https://*.google.com.mt/*",
        "https://*.google.nl/*",
        "https://*.google.pl/*",
        "https://*.google.pt/*",
        "https://*.google.ro/*",
        "https://*.google.si/*",
        "https://*.google.sk/*",
        "https://*.google.se/*",
        "https://*.bing.com/*",
        "http://*.bing.com/*",
        "https://*.search.yahoo.com/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "scripts/tld.js",
        "scripts/kconnect.js",
        "scripts/contentscript.js"
      ],
      "css":[
        "styles/main.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "styles/main.css",
    "images/*"
  ]
}
